<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gmedia.net.id.semargres2018.MenuHome.NavHome"
    android:background="@color/color_white"
    android:layout_marginBottom="@dimen/margin_bottom_fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize="@dimen/scrollbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl_header_slide">

                    <gmedia.net.id.semargres2018.CustomView.WrapContentViewPager
                        android:id="@+id/pager_introduction"
                        android:layout_width="match_parent"
                        android:layout_height="360dp"
                        tools:listitem="@layout/slider_pager_item"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"></gmedia.net.id.semargres2018.CustomView.WrapContentViewPager>

                    <RelativeLayout
                        android:id="@+id/rl_view_pager_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="5dp"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/ll_view_pager_dot_count"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:orientation="horizontal" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_tiny"
                    android:weightSum="1">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:layout_marginRight="1dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:textSize="@dimen/size_label"
                            android:id="@+id/tv_ket_akhir"
                            android:gravity="center_vertical|right"
                            android:background="@color/color_white"
                            android:textColor="@color/color_black"
                            android:text="Berakhir dalam " />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/tv_ket_akhir">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:gravity="center_vertical|right"
                                android:background="@drawable/bg_time"
                                android:textColor="@color/color_white"
                                android:paddingTop="1dp"
                                android:paddingBottom="1dp"
                                android:paddingRight="2dp"
                                android:paddingLeft="2dp"
                                android:id="@+id/tv_day"
                                android:layout_marginRight="@dimen/margin_tiny"
                                android:text="00 D" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:gravity="center_vertical|right"
                                android:background="@drawable/bg_time"
                                android:textColor="@color/color_white"
                                android:paddingTop="1dp"
                                android:paddingBottom="1dp"
                                android:paddingRight="2dp"
                                android:paddingLeft="2dp"
                                android:layout_marginRight="@dimen/margin_tiny"
                                android:id="@+id/tv_hour"
                                android:text="00 M" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/size_title"
                                android:gravity="center_vertical|right"
                                android:background="@drawable/bg_time"
                                android:textColor="@color/color_white"
                                android:paddingTop="1dp"
                                android:paddingBottom="1dp"
                                android:paddingRight="2dp"
                                android:paddingLeft="2dp"
                                android:id="@+id/tv_minutes"
                                android:text="00 H" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_tiny"
                        android:layout_marginRight="@dimen/margin_small"
                        android:gravity="center_vertical|right">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:textSize="@dimen/size_label"
                            android:gravity="center_vertical|right"
                            android:paddingRight="@dimen/margin_tiny"
                            android:background="@color/color_white"
                            android:textColor="@color/color_black"
                            android:id="@+id/tv_kupon_terjual_title"
                            android:text="E-Kupon terjual " />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="30dp"
                            android:layout_toRightOf="@id/tv_kupon_terjual_title"
                            android:textSize="@dimen/size_value"
                            android:textStyle="bold"
                            android:gravity="center_vertical|right"
                            android:background="@color/color_white"
                            android:textColor="@color/color_black"
                            android:id="@+id/tv_kupon_terjual"
                            android:text=""
                            android:ellipsize="end"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/margin_default"
                    android:paddingLeft="@dimen/margin_default"
                    android:paddingRight="@dimen/margin_default"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:id="@+id/rv_list_kategori">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/iv_adv"
                        android:scaleType="fitXY"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_title"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginRight="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_small"
                        android:textSize="16sp"
                        android:textColor="@color/color_black"
                        android:text="Merchant Populer"/>

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/margin_tiny"
                        android:paddingLeft="@dimen/margin_tiny"
                        android:id="@+id/rv_list_promo">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <ImageView
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_profile"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:id="@+id/iv_profile"/>
    </RelativeLayout>
</FrameLayout>
