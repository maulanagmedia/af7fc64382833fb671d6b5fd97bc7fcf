<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gmedia.net.id.semargres2018.MenuMyQR.NavMyQR"
    android:background="@drawable/ic_background"
    android:layout_marginBottom="@dimen/margin_bottom_fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/ll_container"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_qr"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:background="@drawable/bg_image"
                android:padding="14dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="Tunjukkan QR Code ini ke merchant \nuntuk mendapatkan e-kupon SEMARGRES"
                android:textColor="@color/color_white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/ll_container_1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_marginRight="@dimen/margin_default"
                android:textSize="17sp"
                android:text="Harap lengkapi data profile untuk mendapatkan QR Code dan mendapatkan E-Kupon Semargres"
                android:textColor="@color/color_white" />

            <TextView
                android:id="@+id/tv_text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="17sp"
                android:layout_marginTop="@dimen/margin_small"
                android:text="Lengkapi Data Profile"
                android:textColor="@color/color_blue" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/margin_tiny"
                android:src="@drawable/ic_profile"
                android:id="@+id/iv_profile"/>
        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pb_loading"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>
</FrameLayout>
